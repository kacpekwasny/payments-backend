### POST 
/post/new-payment/{roomid}/
    AuthorizedToRoom?
        return (
            status {
                0: ok
                1: internal error
                2: invalid input
            }
        )

/post/add-user-room/{room_id}/{username}
    AuthorizedToRoom?
        return (
            status {
                0: ok
                1: internal error
                2: username not found
                3: unauthorised to action
            }
        )

/post/remove-user-room/{room_id}/{username}
    AuthorizedToRoom?
        return (
            status {
                0: ok
